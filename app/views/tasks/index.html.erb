
<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task do %>
        <%= task.completed ? '☑️ ' : '' %><%= task.title %><%= link_to ' 🗑️', task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add new task', new_task_path,class: "bold" %>
